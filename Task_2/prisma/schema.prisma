generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql" // or "postgresql" depending on your DB
}

model User {
  user_id    String    @id @default(uuid())
  full_name  String
  username   String    @unique
  email      String    @unique
  phone      String?
  password   String
  role       String @default("user")
  is_active  Boolean   @default(true)

  Teacher    Teacher?
  Student    Student?
  Attendance Attendance[]

  @@map("User")
}

model Teacher {
  teacher_id      String   @id @default(uuid())
  user_id         String   @unique
  employee_number String?
  specialization  String?
  hire_date       DateTime?
  status          String?

  user  User   @relation(fields: [user_id], references: [user_id], onDelete: Cascade)
  Batch Batch[]

  @@map("Teacher")
}

model Batch {
  batch_id    String    @id @default(uuid())
  batch_name  String
  course_name String
  teacher_id  String
  start_date  DateTime?
  end_date    DateTime?
  schedule    String?

  teacher    Teacher    @relation(fields: [teacher_id], references: [teacher_id], onDelete: Cascade)
  Student    Student[]
  Exam       Exam[]
  Attendance Attendance[]

  @@map("Batch")
}

model Student {
  student_id     String    @id @default(uuid())
  batch_id       String?
  user_id        String    @unique
  date_of_birth  DateTime?
  gender         String?
  parent_name    String?
  parent_contact String?
  Address        String?
  enrolled_date  DateTime?
  status         String?
  fees           Float?    @default(0.0)
  due_amount     Float?    @default(0.0)

  batch       Batch?       @relation(fields: [batch_id], references: [batch_id], onDelete: Cascade)
  user        User        @relation(fields: [user_id], references: [user_id], onDelete: Cascade)
  Attendance  Attendance[]
  Exam_Result Exam_Result[]

  @@map("Student")
}

model Exam {
  exam_id     String       @id @default(uuid())
  name        String
  batch_id    String
  date        DateTime?
  total_marks Int

  batch       Batch        @relation(fields: [batch_id], references: [batch_id], onDelete: Cascade)
  Exam_Result Exam_Result[]

  @@map("Exam")
}

model Exam_Result {
  exam_result_id String   @id @default(uuid())
  student_id     String
  exam_id        String
  marks_obtained Int?
  grade          String?
  status         String?

  student Student @relation(fields: [student_id], references: [student_id], onDelete: Cascade)
  exam    Exam    @relation(fields: [exam_id], references: [exam_id], onDelete: Cascade)

  @@map("Exam_Result")
}

model Attendance {
  attendance_id String   @id @default(uuid())
  student_id    String
  user_id       String
  batch_id      String
  date          DateTime
  status        String?

  student Student @relation(fields: [student_id], references: [student_id], onDelete: Cascade)
  user    User    @relation(fields: [user_id], references: [user_id], onDelete: Cascade)
  batch   Batch   @relation(fields: [batch_id], references: [batch_id], onDelete: Cascade)

  @@map("Attendance")
}