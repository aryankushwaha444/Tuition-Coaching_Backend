generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// --------------------
// ENUMS
// --------------------
enum AttendanceStatus {
  present
  absent
  leave
}

enum FeeStatus {
  paid
  unpaid
}

enum InvoiceStatus {
  paid
  unpaid
}

// --------------------
// MODELS
// --------------------

// BATCHES
model Batch {
  id         Int       @id @default(autoincrement())
  name       String
  start_date DateTime?
  end_date   DateTime?
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt

  students Student[]
}

// STUDENTS
model Student {
  id             Int      @id @default(autoincrement())
  batch_id       Int?
  name           String
  phone          String?  @db.VarChar(15)
  email          String?  @unique @db.VarChar(100)
  password       String?  @db.VarChar(255)
  address        String?  @db.VarChar(100)
  guardian_name  String?  @db.VarChar(100)
  guardian_phone String?  @db.VarChar(15)
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt

  batch      Batch?       @relation(fields: [batch_id], references: [id], onDelete: SetNull)
  attendance Attendance[]
  fees       Fee[]
  tokens     Token[]
}

// ATTENDANCE
model Attendance {
  id              Int              @id @default(autoincrement())
  student_id      Int
  attendance_date DateTime
  status          AttendanceStatus @default(present)
  created_at      DateTime         @default(now())
  updated_at      DateTime         @updatedAt

  student Student @relation(fields: [student_id], references: [id], onDelete: Cascade)
}

// FEES
model Fee {
  id           Int       @id @default(autoincrement())
  student_id   Int
  amount       Decimal   @db.Decimal(10, 2)
  month_year   String    @db.VarChar(7)
  due_date     DateTime?
  payment_date DateTime?
  status       FeeStatus @default(unpaid)
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt

  student Student  @relation(fields: [student_id], references: [id], onDelete: Cascade)
  invoice Invoice?
}

// INVOICES
model Invoice {
  id             Int           @id @default(autoincrement())
  fee_id         Int           @unique
  invoice_number String?
  issue_date     DateTime?
  total_amount   Decimal       @db.Decimal(10, 2)
  status         InvoiceStatus @default(unpaid)
  created_at     DateTime      @default(now())
  updated_at     DateTime      @updatedAt

  fee Fee @relation(fields: [fee_id], references: [id], onDelete: Cascade)
}

// TOKENS
model Token {
  id         Int      @id @default(autoincrement())
  student_id Int
  token      String   @unique
  expires_at DateTime
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  student Student @relation(fields: [student_id], references: [id], onDelete: Cascade)
}
